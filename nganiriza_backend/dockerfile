FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# system deps (psycopg/poetry if needed)
RUN apt-get update && apt-get install -y build-essential libpq-dev && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install -r requirements.txt

COPY . .

# collect static at build or in entrypoint
RUN python manage.py collectstatic --noinput

# Gunicorn with Uvicorn workers (ASGI-friendly)
# Change `config.wsgi` to `config.asgi` if you run ASGI; for DRF it's fine to serve WSGI.
CMD ["gunicorn", "config.wsgi:application", \
     "--bind", "0.0.0.0:8000", \
     "--workers", "3", \
     "--timeout", "120"]
